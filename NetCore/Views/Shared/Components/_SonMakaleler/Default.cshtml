
@{
    Layout = null;
}
@using EntityLayer.Concrete
@model List<Makale>

<div class="tech-btm">
    <h3>Son Bloglar</h3>

    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="single.html">
                    <img src=@item.MakaleImgUrl class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="single.html">@item.MakaleBaslik</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i>@item.MakaleTarih.ToShortDateString()
                    </span>
                </div>
            </div>
        </div>
    }

</div>
