
@{
    ViewData["Title"] = "SıgnUp";
    Layout = "~/Views/Shared/KullaniciLayout.cshtml";

}



<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Hemen Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form action="/YazarSıgnUp/SıgnUp" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız ve Soyadınız</label>

                            <input type="text" name="adSoyad" class="form-control" id="validationDefault01" placeholder="" required="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Kullanıcı Adınız</label>
                            <input type="text" name="kullaniciAd" class="form-control" id="validationDefault02" placeholder="" required="">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Mail Adresiniz</label>

                            <input type="text" name="mail" class="form-control" id="validationDefault01" placeholder="" required="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">İmg Url</label>
                            <input type="text" name="imgUrl" class="form-control" id="validationDefault02" placeholder="" required="">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifreniz</label>
                            <input type="password" name="sifre" class="form-control" id="password1" placeholder="" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şifre Tekrar</label>
                            <input type="password" name="sifre2" class="form-control" id="password2" placeholder="" required="">
                        </div>

                    </div>
                    <button type="submit" id="btn1" class="btn btn-primary submit mb-4">Kayıt Ol</button>

                </form>

            </div>
        </div>
    </div>
    <br />
