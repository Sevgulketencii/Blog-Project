
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/KullaniciLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<Makale>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Bloglar</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a asp-controller="Blog" asp-action="BlogDetay" asp-route-id=@item.MakaleId>
                                <img src=@item.MakaleImgUrl class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>@item.MakaleTarih.ToShortDateString()
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 21
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i>@item.Kategori.KategoriAdi
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a asp-controller="Blog" asp-action="BlogDetay" asp-route-id=@item.MakaleId>@item.MakaleBaslik</a>
                                </h5>
                                <p class="card-text mb-3">@item.MakaleAciklama </p>
                                <a asp-controller="Blog" asp-action="BlogDetay" asp-route-id=@item.MakaleId class="btn btn-primary read-m">Devamını Oku</a>
                            </div>
                        </div>
                    }


