
@{
    ViewData["Title"] = "MakaleEkle";
    Layout = "~/Views/Shared/YazarLayout.cshtml";
}
@using EntityLayer.Concrete
@model Makale
<script src="~/lib/jquery/dist/jquery.js"></script>
<div>
    <form action="/Yazar/MakaleEkle" method="post">

        <label>Blog Başlık</label><br />
        <input type="text" name="MakaleBaslik" value="" class="form-control" />
        <span asp-validation-for="MakaleBaslik" class="text-danger"></span><br />
       
        <input type="hidden" name="MakaleTarih" value=@DateTime.Now class="form-control" /><br />
       
        <label>Blog Metin</label><br />
        <input type="text" name="MakaleAciklama" value="" class="form-control" />
        <span asp-validation-for="MakaleAciklama" class="text-danger"></span><br />
    <br />
        <label>Blog Img URL</label><br />
        <input type="text" name="MakaleImgUrl" value="" class="form-control" />
        <span asp-validation-for="MakaleImgUrl" class="text-danger"></span><br /><br />
        <label>Blog Kategori</label><br />
        <select name="KategoriId" class="form-control">
            <option value="1">Yazılım</option>
            <option value="2">Teknoloji</option>
            <option value="3">Sinema</option>
            <option value="4">Oyun</option>
        </select>

        <br /><br />
        <button id="btn1" action="submit" class="btn btn-success">Ekle</button>

    </form>
</div>

