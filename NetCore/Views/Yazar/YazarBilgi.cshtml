
@{
    ViewData["Title"] = "YazarBilgi";
    Layout = "~/Views/Shared/YazarLayout.cshtml";
}
@using EntityLayer.Concrete
@model AppUser
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">YAZAR BİLGİ</h4>
      
            <form action="/Yazar/YazarBilgi" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Adınız Soyadınız</label>
                    <input type="text" name="adSoyad" class="form-control" id="exampleInputName1" value=@Model.adSoyad>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Kullanıcı Adı</label>
                    <input type="text" name="kullaniciAdi" class="form-control" id="exampleInputEmail3" value=@Model.UserName>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresiniz</label>
                    <input type="email" name="mail" class="form-control" id="exampleInputEmail3" value=@Model.Email>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input type="text"  class="form-control" id="exampleInputPassword4" value=@Model.PasswordHash readonly>
                </div>
               
                <div class="form-group">
                    <label for="exampleInputPassword4">Img Url</label>
                    <input type="text" name="imgUrl" class="form-control" id="exampleInputPassword4" value=@Model.ImgUrl >
                </div>
               
                @*<div class="form-group">
                    <label>Resim Yükle</label>
                    <input type="file"  name="YazarImgUrl" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder=@Model.ImgUrl>
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Yükle</button>
                        </span>
                    </div>
                </div>*@
                
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkınızda</label>
                    <textarea class="form-control" name="hakkinda" id="exampleTextarea1">@Model.hakkinda </textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>