
@{
    ViewData["Title"] = "RolList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<AppRole>
<table class="table table-hover">
   <thead>
       <tr>
           <th>Rol ID</th>
           <th>Rol ADI</th>
           <th>Rol Sil</th>
           <th>Rol Güncelle</th>
       </tr>
   </thead>
   <tbody>
       @foreach (var item in Model)
       {
           <tr>
               <td>@item.Id</td>
               <td>@item.Name</td>
               <td><a href="/Admin/Rol/RolSil/@item.Id" class="btn btn-danger">Sil</a></td>
               <td><a href="/Admin/Rol/RolGuncelle/@item.Id" class="btn btn-warning">Güncelle</a></td>
           </tr>
       }

   </tbody>
</table>
<a href="/Admin/Rol/RolEkle" class="btn btn-success">Ekle</a>

